src:
  public:
    manifest.json:
      content: |-
        {
          "name": "Your App Name",
          "short_name": "App",
          "description": "Progressive Web Application",
          "start_url": "/",
          "display": "standalone",
          "background_color": "#ffffff",
          "theme_color": "#000000",
          "icons": [
            {
              "src": "/icons/icon-72x72.png",
              "sizes": "72x72",
              "type": "image/png"
            },
            {
              "src": "/icons/icon-192x192.png", 
              "sizes": "192x192",
              "type": "image/png"
            },
            {
              "src": "/icons/icon-512x512.png",
              "sizes": "512x512", 
              "type": "image/png"
            }
          ]
        }
      dependency:
        - src/public/favicon.ico
        - src/components/html-head.tsx;